{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./build",
    "target": "ES2021",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2021",
      "ESNext"
    ],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@utils": [
        "./src/utils"
      ],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/svn",
    "**/build",
    "**/node_modules",
    "**/assets",
    "**/scripts"
  ]
}
{
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./@types",
    "outDir": "./build/",
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "ESNext",
    "noImplicitAny": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./svn",
    "./build",
    "node_modules",
    "./assets",
    "./scripts"
  ]
}